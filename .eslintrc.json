{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends":
      "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
          "sourceType": "module",
          "experimentalObjectRestSpread": true,
          "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2
    }
}
